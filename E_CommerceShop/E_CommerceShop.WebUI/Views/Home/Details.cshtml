@model E_CommerceShop.Core.Models.Products

@{
    ViewBag.Title = Model.Name + "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>
<div>
    <div class="col-md-4" style="height:200px;padding:10px;margin:10px;border: solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img-responsive" src="~/Content/ProductImages/@Model.Image" />
        </div>
        </div>
        <div class="col-md-4">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Descripition)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripition)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    $@Html.DisplayFor(model => model.Price)
                </dd>
                <dt></dt>
                <dd>
                    <a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Id })" class="btn btn-default">Add to Cart</a>
                </dd>
                <dt></dt>
                <dd>  @Html.ActionLink("Back to List", "Index")</dd>
            </dl>
        </div>
    </div>
    <div class="clearfix"></div>
